generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int      @id @default(autoincrement())
  uid         String   @unique
  name        String
  email       String
  dateCreated DateTime
}

model Reminder {
  id          Int    @id @default(autoincrement())
  uid         String
  message     String
  cronString  String
  guildId     String
  channelId   String
  channelType String
}

model Playlist {
  id          Int      @id @default(autoincrement())
  userId      String
  guildId     String
  tracks      Json
  dateCreated DateTime
  name        String
  private     Boolean?

  @@unique([userId, name])
}

model Tag {
  id          Int      @id @default(autoincrement())
  userId      String
  guildId     String
  name        String
  dateCreated DateTime
  message     String
  isMedia     Boolean
  isGuild     Boolean
}
